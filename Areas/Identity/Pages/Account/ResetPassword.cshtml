@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}

<section class="ejc-auth ejc-auth-login">
    <div class="ejc-auth-card">
        <div class="ejc-auth-form">
            <div class="ejc-auth-brand">
                <div>
                    <span class="ejc-eyebrow">Account Recovery</span>
                    <h1 class="h2 mb-1">Create a new password</h1>
                    <p class="ejc-muted mb-0">Use a strong password to secure your member account.</p>
                </div>
            </div>

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input asp-for="Input.Code" type="hidden" />
                <div class="form-floating mb-3 ejc-auth-input">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" />
                    <label asp-for="Input.Email">Email address</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 ejc-auth-input">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" />
                    <label asp-for="Input.Password">New password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 ejc-auth-input">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" />
                    <label asp-for="Input.ConfirmPassword">Confirm password</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary w-100 ejc-auth-submit">Reset password</button>
            </form>
        </div>

        <div class="ejc-auth-aside">
            <span class="ejc-eyebrow">Security Hint</span>
            <h2 class="h3 mt-2">Use a unique password</h2>
            <p class="ejc-muted">Avoid reusing passwords from other services to reduce account risk.</p>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
