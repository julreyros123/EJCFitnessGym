@page
@{
    ViewData["Title"] = "Password Reset Email Sent";
}

<section class="ejc-auth ejc-auth-login">
    <div class="ejc-auth-card">
        <div class="ejc-auth-form">
            <div class="ejc-auth-brand">
                <div>
                    <span class="ejc-eyebrow">Account Recovery</span>
                    <h1 class="h2 mb-1">Check your email</h1>
                    <p class="ejc-muted mb-0">If the account exists, a password reset link has been sent.</p>
                </div>
            </div>
            <div class="d-grid gap-2">
                <a class="btn btn-primary" asp-page="./Login">Back to sign in</a>
            </div>
        </div>
        <div class="ejc-auth-aside">
            <span class="ejc-eyebrow">Need help?</span>
            <h2 class="h3 mt-2">No email received?</h2>
            <p class="ejc-muted">Check spam folder and verify that you used your registered address.</p>
        </div>
    </div>
</section>
