@page
@{
    ViewData["Title"] = "Password Reset Complete";
}

<section class="ejc-auth ejc-auth-login">
    <div class="ejc-auth-card">
        <div class="ejc-auth-form">
            <div class="ejc-auth-brand">
                <div>
                    <span class="ejc-eyebrow">Account Recovery</span>
                    <h1 class="h2 mb-1">Password updated</h1>
                    <p class="ejc-muted mb-0">Your password has been reset successfully.</p>
                </div>
            </div>
            <div class="d-grid gap-2">
                <a class="btn btn-primary" asp-page="./Login">Sign in now</a>
            </div>
        </div>
        <div class="ejc-auth-aside">
            <span class="ejc-eyebrow">Ready</span>
            <h2 class="h3 mt-2">Continue to portal</h2>
            <p class="ejc-muted">Log in to continue membership management and billing workflows.</p>
        </div>
    </div>
</section>
