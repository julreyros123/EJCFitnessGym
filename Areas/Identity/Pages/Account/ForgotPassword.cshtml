@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
}

<section class="ejc-auth ejc-auth-login">
    <div class="ejc-auth-card">
        <div class="ejc-auth-form">
            <div class="ejc-auth-brand">
                <div>
                    <span class="ejc-eyebrow">Account Recovery</span>
                    <h1 class="h2 mb-1">Reset your password</h1>
                    <p class="ejc-muted mb-0">Enter your email and we will send a password reset link.</p>
                </div>
            </div>

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <div class="form-floating mb-3 ejc-auth-input">
                    <input asp-for="Input.Email" class="form-control" autocomplete="email" />
                    <label asp-for="Input.Email">Email address</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary w-100 ejc-auth-submit">Send reset link</button>
                <div class="ejc-auth-links">
                    <a asp-page="./Login">Back to sign in</a>
                </div>
            </form>
        </div>

        <div class="ejc-auth-aside">
            <span class="ejc-eyebrow">Security</span>
            <h2 class="h3 mt-2">Account protection first</h2>
            <p class="ejc-muted">Password reset works only for confirmed member accounts.</p>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
