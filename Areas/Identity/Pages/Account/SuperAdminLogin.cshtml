@page
@model SuperAdminLoginModel
@{
    ViewData["Title"] = "SuperAdmin Login";
    Layout = "/Areas/Identity/Pages/Account/_BackOfficeAuthLayout.cshtml";
}

<section class="ejc-auth ejc-auth-login">
    <div class="ejc-auth-card">
        <div class="ejc-auth-form">
            <div class="ejc-auth-brand">
                <span class="ejc-brand-badge">EJ</span>
                <div>
                    <span class="ejc-eyebrow">Back Office</span>
                    <h1 class="h2 mb-1">SuperAdmin Login</h1>
                    <p class="ejc-muted mb-0">Sign in with a SuperAdmin account for full platform control.</p>
                </div>
            </div>

            <form id="superadmin-login" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <div class="form-floating mb-3 ejc-auth-input">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email address</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 ejc-auth-input ejc-password-field">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Password" />
                    <label asp-for="Input.Password">Password</label>
                    <button type="button" class="btn btn-outline-light ejc-password-toggle" data-password-toggle aria-label="Show password">
                        <i class="bi bi-eye"></i>
                    </button>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="d-flex align-items-center justify-content-between mb-4 flex-wrap gap-2">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label class="form-check-label" asp-for="Input.RememberMe"></label>
                    </div>
                    <a asp-page="./Login" class="ejc-auth-link">Member Login</a>
                </div>
                <button type="submit" class="btn btn-primary w-100 ejc-auth-submit">SuperAdmin Login</button>
            </form>
        </div>
        <div class="ejc-auth-aside">
            <span class="ejc-eyebrow">Access Control</span>
            <h2 class="h3 mt-2">Restricted Area</h2>
            <p class="ejc-muted">Only SuperAdmin roles can use this entry point.</p>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
