@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<section class="ejc-auth ejc-auth-register">
    <div class="ejc-auth-card">
        <div class="ejc-auth-form">
            <div class="ejc-auth-brand">
                <div>
                    <span class="ejc-eyebrow">Join EJC Fitness</span>
                    <h1 class="h2 mb-1">Create your account</h1>
                    <p class="ejc-muted mb-0">Create your member identity first, then activate your preferred membership plan.</p>
                </div>
            </div>

            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <div class="row g-3 mb-1">
                    <div class="col-md-6">
                        <div class="form-floating ejc-auth-input">
                            <input asp-for="Input.FirstName" class="form-control" autocomplete="given-name" aria-required="true" placeholder="First name" />
                            <label asp-for="Input.FirstName"></label>
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating ejc-auth-input">
                            <input asp-for="Input.LastName" class="form-control" autocomplete="family-name" aria-required="true" placeholder="Last name" />
                            <label asp-for="Input.LastName"></label>
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-floating mb-3 ejc-auth-input">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email address</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 ejc-auth-input">
                    <input asp-for="Input.PhoneNumber" class="form-control" autocomplete="tel" placeholder="+63 900 000 0000" />
                    <label asp-for="Input.PhoneNumber"></label>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="mb-3 ejc-auth-input">
                    <label asp-for="Input.SubscriptionPlanId" class="form-label"></label>
                    <select asp-for="Input.SubscriptionPlanId" asp-items="Model.AvailablePlans" class="form-select">
                        <option value="">Choose later in Memberships</option>
                    </select>
                    <span asp-validation-for="Input.SubscriptionPlanId" class="text-danger"></span>
                    <small class="text-muted d-block mt-2">
                        You can continue without selecting a plan and activate membership after sign-in.
                    </small>
                </div>
                <div class="form-floating mb-3 ejc-auth-input ejc-password-field">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Password" />
                    <label asp-for="Input.Password">Password</label>
                    <button type="button" class="btn btn-outline-light ejc-password-toggle" data-password-toggle aria-label="Show password">
                        <i class="bi bi-eye"></i>
                    </button>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating mb-4 ejc-auth-input ejc-password-field">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm password" />
                    <label asp-for="Input.ConfirmPassword">Confirm password</label>
                    <button type="button" class="btn btn-outline-light ejc-password-toggle" data-password-toggle aria-label="Show password">
                        <i class="bi bi-eye"></i>
                    </button>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button id="registerSubmit" type="submit" class="btn btn-primary w-100 ejc-auth-submit">Create account</button>
                <div class="ejc-auth-links">
                    <span class="ejc-muted">Already have an account?</span>
                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Sign in</a>
                </div>
                <div class="ejc-auth-links">
                    <span class="ejc-muted">Need plan details first?</span>
                    <a asp-area="" asp-page="/Public/Pricing">View memberships</a>
                </div>
            </form>

        </div>

        <div class="ejc-auth-aside">
            <span class="ejc-eyebrow">Member benefits</span>
            <h2 class="h3 mt-2">Build momentum from day one</h2>
            <p class="ejc-muted">Register once and manage everything from one member portal.</p>
            <ul class="ejc-auth-list">
                <li><i class="bi bi-check2"></i><span>Book training sessions in seconds</span></li>
                <li><i class="bi bi-check2"></i><span>View invoices and payment status</span></li>
                <li><i class="bi bi-check2"></i><span>Track attendance and consistency</span></li>
            </ul>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
