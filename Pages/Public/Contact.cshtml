@page
@model EJCFitnessGym.Pages.Public.ContactModel
@{
    ViewData["Title"] = "Contact";
}

<section class="section-block">
    <div class="container">
        <div class="card">
            <div class="card-body p-4">
                <h1 class="h2 mb-2">Contact EJC Fitness Gym</h1>
                <p class="ejc-muted mb-4">Get in touch for membership, billing, or support concerns.</p>

                <div class="row g-3">
                    <div class="col-md-4">
                        <div class="ejc-stat h-100">
                            <h3 class="h5">Phone</h3>
                            <p class="ejc-muted mb-0">+63 900 000 0000</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="ejc-stat h-100">
                            <h3 class="h5">Email</h3>
                            <p class="ejc-muted mb-0">support@ejcfitnessgym.com</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="ejc-stat h-100">
                            <h3 class="h5">Hours</h3>
                            <p class="ejc-muted mb-0">Mon-Sun, 6:00 AM - 10:00 PM</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
