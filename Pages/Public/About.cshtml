@page
@model EJCFitnessGym.Pages.Public.AboutModel
@{
    ViewData["Title"] = "About";
}

<div class="container py-5">
    <div class="row g-4 align-items-center">
        <div class="col-lg-6">
            <h1 class="display-5">Built for Athletes</h1>
            <p class="lead">EJC Fitness Gym is a performance-first community. We combine elite coaching with smart operations to keep every member on track.</p>
            <p class="ejc-muted">Replace this copy with your story, founders, and mission once your brand assets are ready.</p>
            <div class="d-flex gap-2 flex-wrap">
                <span class="badge ejc-badge">Strength</span>
                <span class="badge ejc-badge">Conditioning</span>
                <span class="badge ejc-badge">Recovery</span>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Mission Snapshot</h5>
                    <ul class="mt-3">
                        <li>Deliver world-class training and coaching.</li>
                        <li>Use data to improve athlete performance.</li>
                        <li>Build a welcoming, disciplined gym culture.</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3 mt-4">
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Facility</h5>
                    <p class="ejc-muted">State-of-the-art equipment zones and recovery bays.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Coaching</h5>
                    <p class="ejc-muted">Certified trainers who build sustainable progress plans.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Community</h5>
                    <p class="ejc-muted">A supportive environment that keeps members committed.</p>
                </div>
            </div>
        </div>
    </div>
</div>
