@page
@model EJCFitnessGym.Pages.Staff.ReportsModel
@{
    ViewData["Title"] = "Reports";
}

<div class="container py-4">
    <h1 class="h3 mb-3">Reports</h1>

    <div class="row g-3">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Revenue</h5>
                    <p class="text-muted">View income from subscriptions and payments.</p>
                    <a class="btn btn-outline-primary" href="/Invoices">Open Invoices</a>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Attendance</h5>
                    <p class="text-muted">Member visits and check-in metrics.</p>
                    <a class="btn btn-outline-primary" asp-page="/Staff/Attendance">Open Attendance</a>
                </div>
            </div>
        </div>
    </div>
</div>
