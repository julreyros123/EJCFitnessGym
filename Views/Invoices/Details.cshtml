@model EJCFitnessGym.Models.Billing.Invoice
@{
    ViewData["Title"] = "Invoice Details";
}

<div class="d-flex justify-content-between align-items-center mt-4 mb-3">
    <h1 class="h3 mb-0">Invoice @Model.InvoiceNumber</h1>
    <a class="btn btn-outline-secondary" asp-action="Index">Back</a>
</div>

<div class="row g-3">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4">Member</dt>
                    <dd class="col-sm-8">@Model.MemberUserId</dd>

                    <dt class="col-sm-4">Issue Date</dt>
                    <dd class="col-sm-8">@Model.IssueDateUtc.ToString("yyyy-MM-dd")</dd>

                    <dt class="col-sm-4">Due Date</dt>
                    <dd class="col-sm-8">@Model.DueDateUtc.ToString("yyyy-MM-dd")</dd>

                    <dt class="col-sm-4">Amount</dt>
                    <dd class="col-sm-8">@Model.Amount.ToString("0.00")</dd>

                    <dt class="col-sm-4">Status</dt>
                    <dd class="col-sm-8">@Model.Status</dd>
                </dl>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">Record Payment</div>
            <div class="card-body">
                <form asp-action="AddPayment" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Amount</label>
                            <input class="form-control" name="amount" type="number" step="0.01" min="0" required />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Method</label>
                            <select class="form-select" name="method">
                                @foreach (var m in Enum.GetValues(typeof(EJCFitnessGym.Models.Billing.PaymentMethod)).Cast<EJCFitnessGym.Models.Billing.PaymentMethod>())
                                {
                                    <option value="@m">@m</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Reference #</label>
                            <input class="form-control" name="referenceNumber" />
                        </div>
                    </div>

                    <button type="submit" class="btn btn-success">Add Payment</button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">Payments</div>
            <div class="card-body">
                @if (Model.Payments.Count == 0)
                {
                    <div class="text-muted">No payments recorded.</div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-sm align-middle mb-0">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Method</th>
                                    <th>Ref</th>
                                    <th class="text-end">Amount</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var p in Model.Payments.OrderByDescending(x => x.PaidAtUtc))
                            {
                                <tr>
                                    <td>@p.PaidAtUtc.ToString("yyyy-MM-dd")</td>
                                    <td>@p.Method</td>
                                    <td>@p.ReferenceNumber</td>
                                    <td class="text-end">@p.Amount.ToString("0.00")</td>
                                    <td>@p.Status</td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
