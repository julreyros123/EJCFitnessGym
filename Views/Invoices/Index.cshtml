@model IEnumerable<EJCFitnessGym.Models.Billing.Invoice>
@{
    ViewData["Title"] = "Invoices";
    var status = ViewBag.Status as EJCFitnessGym.Models.Billing.InvoiceStatus?;
}

<div class="py-4">
    <div class="ejc-table-toolbar mb-3">
        <div>
            <h1 class="display-6 mb-0">Invoices</h1>
            <p class="ejc-muted mb-0">Track issued invoices and payment status.</p>
        </div>
        <a class="btn btn-primary" asp-action="Create">Create Invoice</a>
    </div>

    <div class="card mb-3">
        <div class="card-body">
            <div class="d-flex flex-wrap gap-2">
                <a class="btn btn-sm @(status == null ? "btn-primary" : "btn-outline-primary")" asp-action="Index">All</a>
                @foreach (var s in Enum.GetValues(typeof(EJCFitnessGym.Models.Billing.InvoiceStatus)).Cast<EJCFitnessGym.Models.Billing.InvoiceStatus>())
                {
                    <a class="btn btn-sm @(status == s ? "btn-primary" : "btn-outline-primary")" asp-action="Index" asp-route-status="@s">@s</a>
                }
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Invoice #</th>
                            <th>Member</th>
                            <th>Issue</th>
                            <th>Due</th>
                            <th class="text-end">Amount</th>
                            <th>Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var inv in Model)
                    {
                        <tr>
                            <td>@inv.InvoiceNumber</td>
                            <td>@inv.MemberUserId</td>
                            <td>@inv.IssueDateUtc.ToString("yyyy-MM-dd")</td>
                            <td>@inv.DueDateUtc.ToString("yyyy-MM-dd")</td>
                            <td class="text-end">@inv.Amount.ToString("0.00")</td>
                            <td>@inv.Status</td>
                            <td class="text-end">
                                <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@inv.Id">View</a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
