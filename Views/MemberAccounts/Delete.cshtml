@model EJCFitnessGym.Models.Admin.MemberAccountDeleteViewModel
@{
    ViewData["Title"] = "Delete Member";
}

<div class="py-4">
    <div class="ejc-table-toolbar mb-3">
        <div>
            <h1 class="display-6 mb-0">Delete Member Account</h1>
            <p class="ejc-muted mb-0">This will remove member login and membership assignment records.</p>
        </div>
    </div>

    <div class="alert alert-warning">
        This action cannot be undone.
    </div>

    <div class="card">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.FullName</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Plan</dt>
                <dd class="col-sm-9">@Model.PlanName</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" asp-route-id="@Model.UserId" method="post" class="mt-3 d-flex gap-2">
        <button type="submit" class="btn btn-danger">Confirm Delete</button>
        <a class="btn btn-outline-secondary" asp-action="Index">Cancel</a>
    </form>
</div>
