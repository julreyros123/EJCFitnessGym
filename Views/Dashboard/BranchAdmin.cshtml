@{
    ViewData["Title"] = "Branch Admin";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-2">
        <div>
            <h1 class="display-5 mb-1">Branch Admin</h1>
            <p class="ejc-muted mb-0">Welcome, @User.Identity?.Name</p>
        </div>
        <span class="badge ejc-badge">Branch Control</span>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="ejc-stat">
                <h3 class="h2">248</h3>
                <p class="ejc-muted mb-0">Active members</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="ejc-stat">
                <h3 class="h2">18</h3>
                <p class="ejc-muted mb-0">Front desk on duty</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="ejc-stat">
                <h3 class="h2">â‚±0</h3>
                <p class="ejc-muted mb-0">Today billing</p>
            </div>
        </div>
    </div>

    <div class="row g-3">
        <div class="col-lg-4">
            <div class="card h-100">
                <div class="card-body">
                    <div class="ejc-card-icon mb-3">
                        <span class="ejc-icon"><i class="bi bi-people"></i></span>
                        <h5 class="card-title mb-0">Members</h5>
                    </div>
                    <p class="ejc-muted">Manage member profiles and renewals.</p>
                    <a class="btn btn-outline-primary" asp-controller="MemberAccounts" asp-action="Index">Open</a>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card h-100">
                <div class="card-body">
                    <div class="ejc-card-icon mb-3">
                        <span class="ejc-icon"><i class="bi bi-box-seam"></i></span>
                        <h5 class="card-title mb-0">Inventory</h5>
                    </div>
                    <p class="ejc-muted">Track supplies and services.</p>
                    <a class="btn btn-outline-primary" asp-page="/Admin/Inventory">Open</a>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card h-100">
                <div class="card-body">
                    <div class="ejc-card-icon mb-3">
                        <span class="ejc-icon"><i class="bi bi-bar-chart-line"></i></span>
                        <h5 class="card-title mb-0">Reports</h5>
                    </div>
                    <p class="ejc-muted">Attendance and revenue insights.</p>
                    <a class="btn btn-outline-primary" asp-page="/Staff/Reports">View</a>
                </div>
            </div>
        </div>
    </div>
</div>
