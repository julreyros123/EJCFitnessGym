@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container py-5">
    <div class="card">
        <div class="card-body">
            <h1 class="display-6 mb-2">Something went wrong</h1>
            <p class="ejc-muted">An error occurred while processing your request.</p>

            @if (Model.ShowRequestId)
            {
                <p>
                    <strong>Request ID:</strong> <code>@Model.RequestId</code>
                </p>
            }

            <div class="alert alert-warning mt-4">
                <strong>Development mode:</strong> enable the Development environment to see more detail.
            </div>
            <p class="ejc-muted mb-0">
                For local debugging, set <strong>ASPNETCORE_ENVIRONMENT</strong> to <strong>Development</strong> and restart the app.
            </p>
        </div>
    </div>
</div>
