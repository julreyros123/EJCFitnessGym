@model EJCFitnessGym.Models.Billing.SubscriptionPlan
@{
    ViewData["Title"] = "Edit Plan";
}

<div class="container py-5">
    <div class="ejc-table-toolbar mb-3">
        <div>
            <h1 class="display-6 mb-0">Edit Plan</h1>
            <p class="ejc-muted mb-0">Update pricing and plan details.</p>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="Price" class="form-label"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="BillingCycle" class="form-label"></label>
                        <select asp-for="BillingCycle" class="form-select" asp-items="Html.GetEnumSelectList<EJCFitnessGym.Models.Billing.BillingCycle>()"></select>
                    </div>
                    <div class="col-md-4 mb-3 d-flex align-items-end">
                        <div class="form-check">
                            <input asp-for="IsActive" class="form-check-input" />
                            <label asp-for="IsActive" class="form-check-label"></label>
                        </div>
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a class="btn btn-outline-secondary" asp-action="Index">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
